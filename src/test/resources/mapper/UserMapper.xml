<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.aster.plugin.garble.mapper.UserMapper">


    <select id="selectAll" resultType="com.github.aster.plugin.garble.entity.UserEntity">
        select * from user order by id
    </select>

    <update id="updateOne">
        update user set name = #{name} where id =1
    </update>

</mapper>
